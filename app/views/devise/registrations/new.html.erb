<%= devise_error_messages! %>
  <br/>
<h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %><br />

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 18rem;" %>
  </div>

  <div class="field">
    <label>Mot de passe
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %></label><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width: 18rem;" %>
  </div>

  <div class="field">
    <label>Confirmation de mot de passe</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width: 18rem;" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "S'inscrire", class: "btn btn-primary" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
