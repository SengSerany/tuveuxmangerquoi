<h2>Mot de passe oublié?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br />
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 25rem;" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Envoyé moi les instructions pour réinitialiser mon mot de passe", class: "btn btn-primary" %>
  </div>
<% end %> <br />

<%= render "devise/shared/links" %>
