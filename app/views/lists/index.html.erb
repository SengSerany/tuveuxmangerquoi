<h1>Mes listes 📝</h1>
<br />
<br />
<h5>Créer une liste</h5>
 <%= form_for @list do |f| %>
    <div class="form-align">
        <div class="row">
            <div class="col-sm-4 my-1">
                <%= f.text_field :name, class: 'form-control mb-2', placeholder: "Ex: Repas Semaine 1" %>
            </div>

            <%= f.hidden_field :user_id, value: current_user.id %>

            <div class="col-auto my-1">
                <button type="submit" class="btn btn-primary">Créer ma liste</button>
            </div>
        </div>
    </div>
<% end %>

<br />
<br />

<% if @lists.count === 0 %>
    <p class="text-center">Vous n'avez actuellement aucune liste d'enregistré 😢.</p>
<% else %>
    <% @lists.each do |list| %>
        <a href="<%= list_path(list.id) %>">
            <div class="card col-sm-3 my-1">
                <div class="card-body">
                    <%= list.name %>
                </div>
            </div>
        </a>
        <br/>
    <% end %>
<% end %>
